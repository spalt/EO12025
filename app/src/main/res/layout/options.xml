<!-- layout_dialog_setup.xml -->

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basic configuration:"
        android:layout_marginTop="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/editTextServiceAccountEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Service Account Email" />

    <EditText
        android:id="@+id/editTextSericeAccountPrivateKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Private Key" />

    <EditText
        android:id="@+id/editTextFolderID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Folder Id" />

    <Button
        android:id="@+id/btnLoadConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load above settings from config.json" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Slideshow options:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <RadioGroup
        android:id="@+id/optionsRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioOption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="0"
            android:text="Show my media" />

        <RadioButton
            android:id="@+id/radioOption4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="3"
            android:text="Show my on device media" />

        <RadioButton
            android:id="@+id/radioOption5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="4"
            android:enabled="false"
            android:text="Show public media and share mine with others" />


    </RadioGroup>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quiet hours:"
        android:layout_marginTop="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/startHourLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Hour"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/startHourSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/endHourLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Hour"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/endHourSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Slideshow interval (in minutes):"
        android:layout_marginTop="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/editTextInterval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="5" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Brightness:"
        android:layout_marginTop="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <CheckBox
        android:id="@+id/cbBrightnessAuto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auto brightness" />

    <SeekBar
        android:id="@+id/sbBrightness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="0" />


</LinearLayout>

</ScrollView>